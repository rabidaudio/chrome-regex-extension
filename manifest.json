{
  "manifest_version": 2,

  "name": "No more feels",
  "description": "This extension replaces text you don't want to see with text you do.",
  "version": "0.2",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"], 
      "css": ["replace.css"],
      "js": ["replace.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "page_action": {
    "default_icon": "icons/off.png",
    "default_popup": "page.html",
    "default_title": "Replacement"
  },
  "permissions": [
    "tabs"
  ]
}
